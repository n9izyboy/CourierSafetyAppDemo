<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierSafetyAppDemo.Views.RoutesViewl"
             Title="RoutesViewl">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" 
              Padding="20,50,20,20" 
              BackgroundColor="#5B5FC7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label Text="Route Safety Map"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>


                <Border HorizontalOptions="End"
                        BackgroundColor="#7478CC"
                        StrokeThickness="0"
                        Padding="12,8"
                        VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="6">
                        <Image Source="layers_icon.png"
                               WidthRequest="18"
                               HeightRequest="18"
                               VerticalOptions="Center"/>
                        <Label Text="Layers"
                               FontSize="14"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

            <Label Grid.Row="1"
                   Text="Real-time safety zones and traffic"
                   FontSize="14"
                   TextColor="#B8BADE"
                   Margin="0,4,0,0"/>
        </Grid>



        <ScrollView Grid.Row="1" BackgroundColor="#F5F3FF">
            <VerticalStackLayout Spacing="16" Padding="16">
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="0"
                        HeightRequest="420">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.12" Radius="20" Offset="0,8"/>
                    </Border.Shadow>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
    
    
</ContentPage>