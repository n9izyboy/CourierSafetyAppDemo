<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierSafetyAppDemo.Views.RoutesViewl"
             xmlns:viewmodels="clr-namespace:CourierSafetyAppDemo.ViewModels"
             x:DataType="viewmodels:RoutesViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F3FF">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" 
              Padding="20,50,20,16"
              BackgroundColor="#6366F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Title -->
            <Grid Grid.Row="0">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Route Safety Map"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Real-time safety zones and traffic"
                           FontSize="13"
                           TextColor="#C7D2FE"/>
                </VerticalStackLayout>

                <!-- Layers Button -->
                <Border HorizontalOptions="End"
                        BackgroundColor="#5558D9"
                        StrokeThickness="0"
                        Padding="12,8"
                        VerticalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="??" FontSize="16"/>
                        <Label Text="Layers"
                               FontSize="13"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

            <!-- Map Section with Legend -->
            <Border Grid.Row="1"
                    Margin="0,16,0,0"
                    BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="0"
                    HeightRequest="280">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="15" Offset="0,4"/>
                </Border.Shadow>
                <Grid>
                    <!-- Map Placeholder -->
                    <Border BackgroundColor="#F3F4F6">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="12">
                            <Label Text="???" FontSize="80"/>
                            <Label Text="Map View" TextColor="#9CA3AF" FontSize="16" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Safety Zones Legend (Top Left) -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="12,10"
                            Margin="12,12,0,0"
                            HorizontalOptions="Start"
                            VerticalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.12" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Safety Zones"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#EF4444"
                                         WidthRequest="10"
                                         HeightRequest="10"
                                         VerticalOptions="Center"/>
                                <Label Text="High Risk"
                                       FontSize="12"
                                       TextColor="#374151"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#F59E0B"
                                         WidthRequest="10"
                                         HeightRequest="10"
                                         VerticalOptions="Center"/>
                                <Label Text="Moderate"
                                       FontSize="12"
                                       TextColor="#374151"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#10B981"
                                         WidthRequest="10"
                                         HeightRequest="10"
                                         VerticalOptions="Center"/>
                                <Label Text="Safe Zone"
                                       FontSize="12"
                                       TextColor="#374151"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Map Controls (Top Right) -->
                    <VerticalStackLayout Margin="0,12,12,0"
                                         Spacing="8"
                                         HorizontalOptions="End"
                                         VerticalOptions="Start">
                        <Border BackgroundColor="White"
                                StrokeThickness="0"
                                Padding="10"
                                WidthRequest="40"
                                HeightRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Radius="6" Offset="0,2"/>
                            </Border.Shadow>
                            <Label Text="??" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border BackgroundColor="White"
                                StrokeThickness="0"
                                Padding="10"
                                WidthRequest="40"
                                HeightRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Radius="6" Offset="0,2"/>
                            </Border.Shadow>
                            <Label Text="??" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Current Location Button -->
                    <Border BackgroundColor="#6366F1"
                            StrokeThickness="0"
                            Padding="10"
                            Margin="0,0,12,12"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            WidthRequest="44"
                            HeightRequest="44">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="22"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#6366F1" Opacity="0.3" Radius="10" Offset="0,4"/>
                        </Border.Shadow>
                        <Ellipse Fill="White"
                                 WidthRequest="10"
                                 HeightRequest="10"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">

                <!-- Time Analysis Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.06" Radius="10" Offset="0,2"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12">
                        <Grid>
                            <Label Text="Time Analysis"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>
                            <Label Text="2:00 PM"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#6366F1"
                                   HorizontalOptions="End"/>
                        </Grid>

                        <VerticalStackLayout Spacing="6">
                            <Grid HeightRequest="6">
                                <Border BackgroundColor="#E5E7EB"
                                        StrokeThickness="0"
                                        HeightRequest="6">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="3"/>
                                    </Border.StrokeShape>
                                </Border>

                                <Border BackgroundColor="#6366F1"
                                        StrokeThickness="0"
                                        HeightRequest="6"
                                        HorizontalOptions="Start"
                                        WidthRequest="180">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="3"/>
                                    </Border.StrokeShape>
                                </Border>

                                <Ellipse Fill="#6366F1"
                                         Stroke="White"
                                         StrokeThickness="2"
                                         WidthRequest="18"
                                         HeightRequest="18"
                                         HorizontalOptions="Start"
                                         Margin="175,0,0,0">
                                    <Ellipse.Shadow>
                                        <Shadow Brush="Black" Opacity="0.15" Radius="4" Offset="0,2"/>
                                    </Ellipse.Shadow>
                                </Ellipse>
                            </Grid>

                            <Grid>
                                <Label Text="12 AM"
                                       FontSize="11"
                                       TextColor="#9CA3AF"
                                       HorizontalOptions="Start"/>
                                <Label Text="12 PM"
                                       FontSize="11"
                                       TextColor="#9CA3AF"
                                       HorizontalOptions="Center"/>
                                <Label Text="11 PM"
                                       FontSize="11"
                                       TextColor="#9CA3AF"
                                       HorizontalOptions="End"/>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Active Filters -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Active Filters"
                           FontSize="15"
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>

                    <HorizontalStackLayout Spacing="10">
                        <Border BackgroundColor="#FEE2E2"
                                StrokeThickness="0"
                                Padding="12,7">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="??" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Crime Alerts"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="#991B1B"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                Padding="12,7">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="??" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Traffic"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="#4B5563"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                Padding="12,7">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="??" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Well-lit Areas"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="#4B5563"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Zone Analysis Section -->
                <VerticalStackLayout Spacing="12">
                    <Grid>
                        <Label Text="Zone Analysis"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#1F2937"/>
                        <Label Text="View All"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#6366F1"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Downtown District - High Risk -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.06" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Red Risk Bar -->
                            <BoxView Grid.Column="0"
                                     BackgroundColor="#EF4444">
                                <BoxView.Clip>
                                    <RoundRectangleGeometry CornerRadius="14,0,0,14" 
                                                            Rect="0,0,6,200"/>
                                </BoxView.Clip>
                            </BoxView>

                            <!-- Content -->
                            <Grid Grid.Column="1" Padding="16" RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="Downtown District"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1F2937"/>
                                        <Label Text="High-risk delivery zone"
                                               FontSize="12"
                                               TextColor="#6B7280"/>
                                    </VerticalStackLayout>

                                    <Border HorizontalOptions="End"
                                            BackgroundColor="#FEE2E2"
                                            StrokeThickness="0"
                                            Padding="10,5"
                                            VerticalOptions="Start">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6"/>
                                        </Border.StrokeShape>
                                        <Label Text="HIGH RISK"
                                               FontSize="9"
                                               FontAttributes="Bold"
                                               TextColor="#DC2626"/>
                                    </Border>
                                </Grid>

                                <!-- Description -->
                                <Label Grid.Row="1"
                                       Text="3 package thefts reported in the last 30 days. Avoid deliveries between 12-6 PM when possible."
                                       FontSize="12"
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>

                                <!-- Stats -->
                                <Grid Grid.Row="2" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="3"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#EF4444"/>
                                        <Label Text="Incidents"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="2.1"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#F59E0B"/>
                                        <Label Text="Risk Score"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" Spacing="4">
                                        <Label Text="0.2mi"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#6B7280"/>
                                        <Label Text="Distance"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Residential Park Area - Safe -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.06" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Green Safe Bar -->
                            <BoxView Grid.Column="0"
                                     BackgroundColor="#10B981">
                                <BoxView.Clip>
                                    <RoundRectangleGeometry CornerRadius="14,0,0,14" 
                                                            Rect="0,0,6,200"/>
                                </BoxView.Clip>
                            </BoxView>

                            <!-- Content -->
                            <Grid Grid.Column="1" Padding="16" RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="Residential Park Area"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1F2937"/>
                                        <Label Text="Safe delivery zone"
                                               FontSize="12"
                                               TextColor="#6B7280"/>
                                    </VerticalStackLayout>

                                    <Border HorizontalOptions="End"
                                            BackgroundColor="#DCFCE7"
                                            StrokeThickness="0"
                                            Padding="10,5"
                                            VerticalOptions="Start">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6"/>
                                        </Border.StrokeShape>
                                        <Label Text="SAFE"
                                               FontSize="9"
                                               FontAttributes="Bold"
                                               TextColor="#15803D"/>
                                    </Border>
                                </Grid>

                                <!-- Description -->
                                <Label Grid.Row="1"
                                       Text="Well-lit area with security cameras. No incidents reported in 90 days. Preferred delivery location."
                                       FontSize="12"
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>

                                <!-- Stats -->
                                <Grid Grid.Row="2" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="0"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#10B981"/>
                                        <Label Text="Incidents"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="0.2"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#10B981"/>
                                        <Label Text="Risk Score"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" Spacing="4">
                                        <Label Text="0.5mi"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#6B7280"/>
                                        <Label Text="Distance"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Main Street Corridor - Moderate with SOS -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.06" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Orange Moderate Bar -->
                            <BoxView Grid.Column="0"
                                     BackgroundColor="#F59E0B">
                                <BoxView.Clip>
                                    <RoundRectangleGeometry CornerRadius="14,0,0,14" 
                                                            Rect="0,0,6,180"/>
                                </BoxView.Clip>
                            </BoxView>

                            <!-- Content -->
                            <Grid Grid.Column="1" Padding="16" RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="Main Street Corridor"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1F2937"/>
                                        <Label Text="Traffic congestion zone"
                                               FontSize="12"
                                               TextColor="#6B7280"/>
                                    </VerticalStackLayout>

                                    <Border HorizontalOptions="End"
                                            BackgroundColor="#FEF3C7"
                                            StrokeThickness="0"
                                            Padding="10,5"
                                            VerticalOptions="Start">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6"/>
                                        </Border.StrokeShape>
                                        <Label Text="MODERATE"
                                               FontSize="9"
                                               FontAttributes="Bold"
                                               TextColor="#B45309"/>
                                    </Border>
                                </Grid>

                                <!-- Description -->
                                <Label Grid.Row="1"
                                       Text="Heavy traffic during rush hours (4-7 PM). Consider alternate routes during peak times."
                                       FontSize="12"
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>

                                <!-- Stats -->
                                <Grid Grid.Row="2" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="1"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#F59E0B"/>
                                        <Label Text="Incidents"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="0.8"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#F59E0B"/>
                                        <Label Text="Risk Score"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" Spacing="4">
                                        <Label Text="0.1mi"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#6B7280"/>
                                        <Label Text="Distance"
                                               FontSize="11"
                                               TextColor="#9CA3AF"/>
                                    </VerticalStackLayout>
                                </Grid>

                                <!-- SOS Button -->
                                <Border Grid.Row="3"
                                        BackgroundColor="#EF4444"
                                        StrokeThickness="0"
                                        Padding="12,8"
                                        Margin="0,8,0,0"
                                        HorizontalOptions="End"
                                        WidthRequest="52"
                                        HeightRequest="52">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="26"/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="#EF4444" Opacity="0.4" Radius="10" Offset="0,4"/>
                                    </Border.Shadow>
                                    <Label Text="SOS"
                                           FontSize="11"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Spacing -->
                <BoxView HeightRequest="40" Color="Transparent"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="2"
              Padding="8,10,8,25"
              BackgroundColor="White"
              ColumnSpacing="0">
            <Grid.Shadow>
                <Shadow Brush="Black" Opacity="0.08" Radius="20" Offset="0,-4"/>
            </Grid.Shadow>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Home -->
            <VerticalStackLayout Grid.Column="0" 
                                 Spacing="4" 
                                 HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="??" FontSize="24"/>
                <Label Text="Home"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Routes (Active) -->
            <VerticalStackLayout Grid.Column="1" 
                                 Spacing="4" 
                                 HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToRoutesCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                <Border BackgroundColor="#E0E7FF"
                        StrokeThickness="0"
                        Padding="12,8"
                        WidthRequest="44"
                        HeightRequest="44">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Label Text="???" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Label Text="Routes"
                       FontSize="11"
                       FontAttributes="Bold"
                       TextColor="#6366F1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Alerts -->
            <VerticalStackLayout Grid.Column="2" 
                                 Spacing="4" 
                                 HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToAlertsCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="??" FontSize="24"/>
                <Label Text="Alerts"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Profile -->
            <VerticalStackLayout Grid.Column="3" 
                                 Spacing="4" 
                                 HorizontalOptions="Center">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="??" FontSize="24"/>
                <Label Text="Profile"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
