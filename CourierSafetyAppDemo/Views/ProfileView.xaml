<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierSafetyAppDemo.Views.ProfileView"
             Title="ProfileView">
    
    
    
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Profile Info -->
        <Grid Grid.Row="0" 
              Padding="20,12,20,24"
              BackgroundColor="#6366F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with SafeRoute -->
            <Grid Grid.Row="0">
                <Label Text="SafeRoute"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>

                <HorizontalStackLayout HorizontalOptions="End" Spacing="12">
                    <Image Source="location_icon.png"
                           WidthRequest="18"
                           HeightRequest="18"/>
                    <Image Source="wifi_icon.png"
                           WidthRequest="18"
                           HeightRequest="18"/>
                    <Image Source="battery_icon.png"
                           WidthRequest="18"
                           HeightRequest="18"/>
                    <Label Text="85%"
                           FontSize="12"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Profile Header Section -->
            <Grid Grid.Row="1" Margin="0,16,0,0" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        WidthRequest="80"
                        HeightRequest="80"
                        VerticalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40"/>
                    </Border.StrokeShape>
                    <Label Text="JD"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#6366F1"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <!-- User Info -->
                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                    <Label Text="John Doe"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Courier ID: #CD-2024-1547"
                           FontSize="13"
                           TextColor="#C7D2FE"/>
                    <Label Text="Member since Jan 2024"
                           FontSize="12"
                           TextColor="#C7D2FE"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="20">

                <!-- Settings Section -->
                <VerticalStackLayout Spacing="12">
                    <!-- Dark Mode Toggle -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="moon_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Label -->
                            <Label Grid.Column="1"
                                   Text="Dark Mode"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#111827"
                                   VerticalOptions="Center"/>

                            <!-- Toggle -->
                            <Switch Grid.Column="2"
                                    IsToggled="False"
                                    VerticalOptions="Center"
                                    ThumbColor="#6366F1"
                                    OnColor="#6366F1"/>
                        </Grid>
                    </Border>

                    <!-- Push Notifications Toggle -->
                    <Border BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="bell_notification_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Label -->
                            <Label Grid.Column="1"
                                   Text="Push Notifications"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#111827"
                                   VerticalOptions="Center"/>

                            <!-- Toggle -->
                            <Switch Grid.Column="2"
                                    IsToggled="True"
                                    VerticalOptions="Center"
                                    ThumbColor="#6366F1"
                                    OnColor="#6366F1"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Main Features Section -->
                <VerticalStackLayout Spacing="0">
                    <Label Text="MAIN FEATURES"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#9CA3AF"
                           Margin="0,0,0,12"/>

                    <!-- Route Planning -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="route_plan_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Route Planning"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="Plan safe delivery routes"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Crime Log -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0"/>
                        </Border.StrokeShape>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="crime_log_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Crime Log"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="View recent incidents"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Emergency SOS -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,14,14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#FEE2E2"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="sos_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Emergency SOS"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#EF4444"/>
                                <Label Text="Quick access to help"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Account Section -->
                <VerticalStackLayout Spacing="0" Margin="0,20,0,0">
                    <Label Text="ACCOUNT"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#9CA3AF"
                           Margin="0,0,0,12"/>

                    <!-- Profile Settings -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="profile_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Profile"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="Manage your account"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Alert Preferences -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0"/>
                        </Border.StrokeShape>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="alert_pref_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Alert Preferences"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="Customize notifications"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Map Settings -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,14,14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="map_settings_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Map Settings"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="Default layers &amp; zoom"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Support Section -->
                <VerticalStackLayout Spacing="0" Margin="0,20,0,0">
                    <Label Text="SUPPORT"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#9CA3AF"
                           Margin="0,0,0,12"/>

                    <!-- Help & Support -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="help_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Help &amp; Support"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="FAQs and contact"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Emergency Contacts -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0"/>
                        </Border.StrokeShape>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="phone_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Emergency Contacts"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="Manage emergency contacts"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- App Settings -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="16"
                            Margin="0,-1,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,14,14"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.04" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    StrokeThickness="0"
                                    WidthRequest="44"
                                    HeightRequest="44">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Image Source="settings_icon.png"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="App Settings"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                                <Label Text="General preferences"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2"
                                   Source="chevron_right_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Spacing -->
                <BoxView HeightRequest="40" Color="Transparent"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="2"
              Padding="8,10,8,25"
              BackgroundColor="White"
              ColumnSpacing="0">
            <Grid.Shadow>
                <Shadow Brush="Black" Opacity="0.08" Radius="20" Offset="0,-4"/>
            </Grid.Shadow>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Home -->
            <VerticalStackLayout Grid.Column="0" 
                               Spacing="4" 
                               HorizontalOptions="Center">
               
                <Image Source="home_icon_gray.png"
                       WidthRequest="24"
                       HeightRequest="24"/>
                <Label Text="Home"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Routes -->
            <VerticalStackLayout Grid.Column="1" 
                               Spacing="4" 
                               HorizontalOptions="Center">
                
                <Image Source="map_icon_gray.png"
                       WidthRequest="24"
                       HeightRequest="24"/>
                <Label Text="Routes"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Alerts -->
            <VerticalStackLayout Grid.Column="2" 
                               Spacing="4" >

                <Image Source="bell_icon_gray.png"
                       WidthRequest="24"
                       HeightRequest="24"/>
                <Label Text="Alerts"
                       FontSize="11"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Profile (Active) -->
            <VerticalStackLayout Grid.Column="3" 
                               Spacing="4" 
                               HorizontalOptions="Center">
              
                <Border BackgroundColor="#E0E7FF"
                        StrokeThickness="0"
                        Padding="12,8"
                        WidthRequest="44"
                        HeightRequest="44">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Image Source="profile_icon_purple.png"
                           WidthRequest="24"
                           HeightRequest="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>