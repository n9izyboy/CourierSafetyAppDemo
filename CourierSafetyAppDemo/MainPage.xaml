<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierSafetyAppDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <StackLayout BackgroundColor="#F8F9FA">
                <Grid Padding="20,40,20,20"
                      BackgroundColor="White">
                    <HorizontalStackLayout Spacing="12">
                        <Image Source="shield_icon.png"
                               WidthRequest="32"
                               HeightRequest="32"/>
                        <Label Text="SafeRoute"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#2563EB"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Label Text="Operation"
                           FontSize="14"
                           TextColor="#6B7280"
                           HorizontalOptions="End"
                           VerticalOptions="Center"/>
                </Grid>

                <StackLayout Padding="0,8,0,0"
                                 Spacing="0">


                    <Grid Padding="20,16"
                              BackgroundColor="White">
                        <Grid.GestureRecognizers>
                            
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="routes_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Grid.Column="0"/>
                        <VerticalStackLayout Grid.Column="1"
                                               Spacing="2">
                            <Label Text="Routes"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                            <Label Text="Route optimization"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid Padding="20, 16"
                          BackgroundColor="White">

                        <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="1"
                       Spacing="2">
                            <Label Text="Analytics"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="#111827"/>
                            <Label Text="Performance data"
               FontSize="13"
               TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Image Source="analytics_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Grid.Column="0"/>

                    </Grid>


                    <Grid Padding="20, 16"
                          BackgroundColor="White">
                        <Grid.GestureRecognizers>
                            
                        </Grid.GestureRecognizers>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="safety_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"/>
                        <VerticalStackLayout Grid.Column="1"
                                             Spacing="2">
                            <Label Text="Safety Reports"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="#111827"/>
                            <Label Text="Incident tracking"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                         
                    </Grid>
                    
                    
                    <Grid Padding="20,16"
                              BackgroundColor="White">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDriversTapped"/>
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="drivers_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Grid.Column="0"/>
                        <VerticalStackLayout Grid.Column="1"
                                               Spacing="2">
                            <Label Text="Drivers"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827"/>
                            <Label Text="Driver management"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Grid>

                   


                    <Border Margin="20"
                            Padding="16"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <StackLayout Spacing="12">
                            <Label Text="Driver Status"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#111827"/>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#22C55E"
                                        WidthRequest="12"
                                        HeightRequest="12"/>
                                <Label Text="Active"
                                       FontSize="13"
                                       TextColor="#374151"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#EAB308"
                                        WidthRequest="12"
                                        HeightRequest="12"/>
                                <Label Text="On Break"
                                       FontSize="13"
                                       TextColor="#374151"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#EF4444"
                                        WidthRequest="12"
                                        HeightRequest="12"/>
                                <Label Text="Emergency"
                                       FontSize="13"
                                       TextColor="#374151"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Ellipse Fill="#9CA3AF"
                                        WidthRequest="12"
                                        HeightRequest="12"/>
                                <Label Text="Offline"
                                       FontSize="13"
                                       TextColor="#374151"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8"
                                                 Margin="0,8,0,0">
                                <Ellipse Fill="#22C55E"
                                        WidthRequest="8"
                                        HeightRequest="8"
                                        VerticalOptions="Center"/>
                                <Label Text="Online"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="#22C55E"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
