<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierSafetyAppDemo.MainPage"
             xmlns:viewmodels="clr-namespace:CourierSafetyAppDemo.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             BackgroundColor="#F5F3FF"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,60,30,30" VerticalOptions="Center">
            
            <!-- Logo -->
            <Border Stroke="#6366F1" 
                    StrokeThickness="3" 
                    BackgroundColor="#FFFFFF" 
                    WidthRequest="100" 
                    HeightRequest="100" 
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 20">
                <Image Source="mapset.png" 
                       WidthRequest="60" 
                       HeightRequest="60"
                       Aspect="AspectFit"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
                <Border.Shadow>
                    <Shadow Brush="#6366F1" Opacity="0.15" Radius="20" Offset="0,4"/>
                </Border.Shadow>
            </Border>

            <!-- Title -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="SafeRoute" 
                       TextColor="#6366F1" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                <Label Text="Courier Safety Platform" 
                       TextColor="#6B7280" 
                       FontSize="14" 
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Login Form -->
            <VerticalStackLayout Spacing="16" Margin="0,40,0,0">

                <!-- Username -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Username" TextColor="#111827" FontSize="14" FontAttributes="Bold"/>
                    <Border Stroke="#E5E7EB" 
                            StrokeThickness="1" 
                            BackgroundColor="#FFFFFF" 
                            Padding="16,12" 
                            StrokeShape="RoundRectangle 12">
                        <Entry Placeholder="Enter your username" 
                               PlaceholderColor="#9CA3AF" 
                               TextColor="#111827" 
                               Text="{Binding Username}"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Password -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Password" TextColor="#111827" FontSize="14" FontAttributes="Bold"/>
                    <Border Stroke="#E5E7EB" 
                            StrokeThickness="1" 
                            BackgroundColor="#FFFFFF" 
                            Padding="16,12" 
                            StrokeShape="RoundRectangle 12">
                        <Entry Placeholder="Enter your password" 
                               PlaceholderColor="#9CA3AF" 
                               TextColor="#111827" 
                               Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Login Button -->
                <Button Text="Sign In" 
                        Command="{Binding LoginCommand}"
                        BackgroundColor="#6366F1" 
                        TextColor="#FFFFFF" 
                        FontAttributes="Bold" 
                        FontSize="16"
                        CornerRadius="12" 
                        HeightRequest="55"
                        Margin="0,16,0,0">
                    <Button.Shadow>
                        <Shadow Brush="#6366F1" Opacity="0.3" Radius="12" Offset="0,4"/>
                    </Button.Shadow>
                </Button>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoggingIn}" 
                                   IsVisible="{Binding IsLoggingIn}" 
                                   Color="#6366F1" 
                                   HeightRequest="40"
                                   Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <!-- Footer -->
            <Label Text="SafeRoute © 2024" 
                   TextColor="#9CA3AF" 
                   FontSize="12" 
                   HorizontalOptions="Center"
                   Margin="0,60,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>